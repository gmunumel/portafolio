<div id="blog">
  <%- @posts.each do |post| %>
  <div class="blog-item">
    <%= link_to image_tag("blog/1/" + post.image_1, width: "280", height: "180", class: "single_image"), blog_path(post) %>
    <!--
    <a href="blog-single.html"><img class="single_image" src="images/blog/thumbs/blog1.jpg" width="280" height="180" alt="blog1" /></a>
    -->
    <div class="blog-item-info">
      <div class="user">gmunumel</div>
      <div class="comments"><%= post.comments %> comments</div>
      <div class="tags"><%= post.tags %></div>
    </div>
    <div class="blog-item-content">
      <a href="<%= blog_path(post) %>">
        <h5><%= post.title %></h5>
      </a>
      <p><%= post.text %></p>
      <%= link_to "view →", blog_path(post), class: "readmore" %> <br />
    </div>
  </div>
