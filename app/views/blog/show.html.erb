<% content_for :head do %>
    <h6><%= link_to 'Home', :root %> → <%= link_to 'Blog', :blog_index %> → <%= @post.id %></h6>
<% end %>

<%= render 'blog/menu' %>

<!--This is the START of the blog section-->
<div id="blog">
  <div class="blog-item-single">
    <h3><%= @post.title %></h3>
    <p class="alignleft"><%= @post.subtitle %></p>
    <p class="alignright"><%= format_full_date @post.created_at %></p>
    <div style="clear: both;"></div>
    <div class="blog-item-single-info">
      <div class="user">gmunumel</div>
      <div class="comments"><%= @post.comments %> comments</div>
      <div class="tags"><%= @post.tags %></div>
    </div>
    <div class="blog-item-single-content">
      <p><%= simple_format h @post.text %></p>
      <% if @post.images.any? %>
          <%- @post.images.each do |photo| %>
              <%= link_to image_tag(photo.asset.url, width: "100", height: "100"), url_for(photo.asset.url), class: "single_image" %>
          <%- end %>
      <% end %>
    </div>
  </div>
</div>
<!--END of blog section-->