      <div class="<%= if i == num then 'recent-item-last' else 'recent-item' end %>">
        <%= link_to image_tag("portfolio/" + project.image_1, width: "250", height: "150"), portfolio_path(project), class: "single_image", rel: "gallery1" %>
        <%= link_to "", "portfolio/" + project.image_2, class: "single_image", rel: "gallery2" %>
        <%= link_to "", "portfolio/" + project.image_3, class: "single_image", rel: "gallery3" %>
        <h6><%= format_full_date project.created_at %></h6>
        <p><%= project.title %>
          <%= link_to "view â†’", portfolio_path(project), class: "readmore" %>
        </p>
      </div>
      <% i+= 1 %>
