<div class="project-summary">
  <% num = 2 %>
  <%- @projects.each_with_index do |project, index| %>
      <div class="<%= if index == num then 'one-third-last' else 'one-third' end %>">
        <% if project.images.any? %>
            <%= link_to image_tag(project.images.first.asset.url, width: "220", height: "132"), portfolio_path(project) %>
        <% end %>
        <h6><%= format_full_date project.created_at %></h6>
        <p><%= project.title %>
          <%= link_to "view â†’", portfolio_path(project), class: "readmore" %>
        </p>
      </div>
  <%- end %>
</div>