<%= render 'portfolio/menu' %>

<!--This is the START of the NIVO slider-->
<div class="slider-wrapper theme-effe">
  <div id="slider" class="nivoSlider">
    <%= image_tag "portfolio/" + @project.image_1, title: "#img1" %>
    <%= image_tag "portfolio/" + @project.image_2, title: "#img2" %>
  </div>
  <div id="slider-shadow"></div>
</div>
<!--END of NIVO Slider-->
<!--This is the START of the project-->
<div class="project">
  <div id="description">
    <h3><%= @project.title %></h3>
    <p>
      <%= @project.text %>
    </p>
  </div>
  <ul id="work">
    <% @project.key_feature.split(/;/).each do |feature| %>
        <li><%= feature %></li>
    <% end %>
  </ul>
</div>
<!--END of project-->
